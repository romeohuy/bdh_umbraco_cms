@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using Umbraco.Web;
@{
    var siteSection = Model.AncestorOrSelf(2);
    var selection = siteSection.Children.Where(x => x.IsVisible());
    var categoryNames = new List<string>();
    foreach (var item in selection)
    {
        try
        {
            if (item is Blogpost blog && blog.Categories.Any())
            {
                categoryNames.AddRange(blog.Categories.ToList());
            }
        }
        catch (Exception e)
        {
            continue;
        }
    }
}

@foreach (var item in categoryNames)
{
    <li><a class="link nav-link" href="@($"/news?cate={item}")">@item</a></li>
}