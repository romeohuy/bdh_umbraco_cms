@{
    Layout = null;
   var rootUrl =  HttpContext.Current.Request.Url.GetLeftPart(UriPartial.Authority);
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    @*<link href="https://fonts.googleapis.com/css?family=Josefin+Sans:300,400,600,700|Quicksand&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Fira+Sans:400,700&display=swap&subset=vietnamese" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli:400,600,700,800,900&amp;display=swap" rel="stylesheet">*@
    <link rel="stylesheet" href="@($"{rootUrl}/css/style.css")" />
    <link rel="stylesheet" href="@($"{rootUrl}/css/header.css")" />

    <link href="@($"{rootUrl}/css/font.css")" rel="stylesheet" />
    <link rel="stylesheet" href="@($"{rootUrl}/css/footer.css")" />
</head>

<body>
    <header>
        <div class="container clearfix">
            <input id="main-menu-state" type="checkbox" />
            <label id="main-menu-btn" class="main-menu-btn" for="main-menu-state">
                <span class="main-menu-btn-icon"></span> Mobile Menu
            </label>
            <a class="logo">
                <img src="@($"{rootUrl}/images/header-logo.png")" alt="">
            </a>

            <ul id="top-nav">
                <li><img src="@($"{rootUrl}/images/svg/phone.svg")" alt="Phone :"></li>
                <li><a href="tel:#" class="link">00000000</a></li>
                <li><img src="@($"{rootUrl}/images/svg/email.svg")" alt="Email : admin@bdh.com.vn"></li>
                <li><a href="mailto:admin@bdh.com.vn" class="link link-email">admin@bdh.com.vn</a></li>
                <li><a href="#" class="link"><img src="@($"{rootUrl}/images/svg/facebook.svg")"></a></li>
                <li><a href="#" class="link"><img src="@($"{rootUrl}/images/svg/linkedin.svg")"></a></li>
            </ul>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <div id="footer-bar" class="container clearfix">
            <div class="footer-col">
                <div>© BDH Advisory Co., Ltd @DateTime.Now.Year</div>
                <div></div>
            </div>
            <div class="footer-col copyright">
                <div>Power by BDH Advisory Co., Ltd</div>
            </div>
        </div>
    </footer>
</body>
</html>