<body>
    <header>
        <div class="container clearfix">
            <a class="logo" href="@home.Url" title="@home.Sitename">
                @if (home.SiteLogo != null && !string.IsNullOrEmpty(home.SiteLogo.Url))
                {
                    <img src="@home.SiteLogo.Url" alt="@home.Sitename">
                }
                else
                {
                    <img src="@Url.Content("~/images/header-logo.png")" alt="@home.Sitename">
                }

            </a>
            <input id="main-menu-state" type="checkbox" />
            <label id="main-menu-btn" class="main-menu-btn" for="main-menu-state">
                <span class="main-menu-btn-icon"></span> Mobile Menu
            </label>
            <ul id="top-nav" class='clearfix'>
                <li><a href="/vi" class="link">Tiếng Việt</a></li>
                <li><img src="@Url.Content("~/images/svg/phone.svg")" alt="Phone : @home.TopHeadPhoneNumber"></li>
                <li><a href="tel:+842873072739" class="link">@home.TopHeadPhoneNumber</a></li>
                <li><img src="@Url.Content("~/images/svg/email.svg")" alt="Email : @home.TopHeaderEmailAddress"></li>
                <li><a href="mailto:@(home.TopHeaderEmailAddress)" class="link link-email">@home.TopHeaderEmailAddress</a></li>
                <li><a href="@home.TopHeaderFacebookLink" class="link"><img src="@Url.Content("~/images/svg/facebook.svg")"></a></li>
                <li><a href="@home.TopHeaderLinkedInUrl" class="link"><img src="@Url.Content("~/images/svg/linkedin.svg")"></a></li>
            </ul>

            <ul id="main-nav" class='clearfix'>
                @Html.Partial("~/views/partials/navigation/topNavigation.cshtml")
            </ul>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <div id="footer-bar" class="container clearfix">
            <div class="footer-col">
                <div>© @home.Sitename @DateTime.Now.Year</div>
